@model IEnumerable<SGVIAJES.DATA.Viaje>
@{
    ViewData["Title"] = "Estadisticas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Estadisticas</h1>


<div class="row">
    <div class="col-sm-5 ml-auto">
        <form method="get" asp-action="Estadisticas">
            <p>
                Seleccione un mes: <input type="text" name="filtro" value="@ViewData["Filtro"]" />
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </p>
        </form>
    </div>
</div>



<div class="container">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(v => v.FechaViaje)</td>
                        <td>@Html.DisplayNameFor(v => v.KM)</td>
                        <td>@Html.DisplayNameFor(v => v.Nafta)</td>
                        <td>@Html.DisplayNameFor(v => v.GNC)</td>
                        <td>@Html.DisplayNameFor(v => v.PeajeEst)</td>
                        <td>@Html.DisplayNameFor(v => v.MinEsper)</td>
                        <td>@Html.DisplayNameFor(v => v.Importe)</td>
                        <td>@Html.DisplayNameFor(v => v.Total)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FechaViaje.Month</td>
                            <td>@item.KM</td>
                            <td>@item.Nafta</td>
                            <td>@item.GNC</td>
                            <td>@item.PeajeEst</td>
                            <td>@item.MinEsper</td>
                            <td>@item.Importe</td>
                            <td>@item.Total</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen registros para mostrar.</p>
        }
    </div>
</div>

@section Scripts{
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/highcharts-more.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    <script src="~/js/Chart.js"></script>
}
